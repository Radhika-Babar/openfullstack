// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       String           @id @default(cuid())
  email    String           @unique
  name     String?
  image    String?
  lessons  LessonProgress[]
}

model LessonProgress {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  slug      String
  completed Boolean  @default(false)
}

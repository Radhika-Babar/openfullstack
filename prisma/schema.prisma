generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String           @id @default(cuid())
  email   String           @unique
  name    String?
  image   String?
  lessons LessonProgress[]
}

model Lesson {
  id          String @id @default(cuid())
  slug        String @unique
  title       String
  description String
  category    String
  level       String
  order       Int
  status      String // "published" | "coming-soon"

  progresses LessonProgress[]

  createdAt DateTime @default(now())
}

model LessonProgress {
  id        String  @id @default(cuid())
  userId    String
  slug      String
  completed Boolean @default(false)

  user     User    @relation(fields: [userId], references: [id])
  lesson   Lesson? @relation(fields: [lessonId], references: [id])
  lessonId String?

  @@unique([userId, slug], name: "userId_slug")
}
